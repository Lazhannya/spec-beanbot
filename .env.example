# Discord Bot Configuration
# Copy this file to .env and fill in your actual values

# Basic bot configuration
APP_ID=your_discord_app_id_here
DISCORD_TOKEN=your_discord_bot_token_here
PUBLIC_KEY=your_discord_public_key_here

# OAuth2 configuration for web interface
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_REDIRECT_URI=https://your-domain.com/auth/callback

# Webhook configuration (optional)
WEBHOOK_URL=https://your-n8n-instance.com/webhook/beanbot-mentions
WEBHOOK_SECRET=your_webhook_signature_secret

# Web Interface Configuration
SESSION_SECRET=your_random_session_secret_key_here

# Admin Configuration
ADMIN_USER_IDS=comma_separated_discord_user_ids

# Logging Configuration
LOG_LEVEL=info
LOG_PRETTY_PRINT=false

# Session Configuration
SESSION_TIMEOUT_HOURS=24
SESSION_REFRESH_THRESHOLD_HOURS=2